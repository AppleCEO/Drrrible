  pod 'Kingfisher'

  # Model
  pod 'ObjectMapper'

  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxDataSources'
  pod 'RxOptional'
  pod 'RxKeyboard'
  pod 'RxSwiftUtilities'
  pod 'RxReusable'

  # UI
  pod 'SnapKit'
  pod 'ManualLayout'

  # Logging
  pod 'CocoaLumberjack/Swift'

  # Misc.
  pod 'Then'
  pod 'ReusableKit'
  pod 'CGFloatLiteral'
  pod 'SwiftyColor'
  pod 'SwiftyImage'
  pod 'UITextView+Placeholder'
